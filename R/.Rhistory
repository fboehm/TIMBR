#prior <- c(9, 1/2, 1/2)
prior <- c(1, 0.125, 0.125)
samples <- 1000000
h <- matrix(NA, samples, 3)
h[,1] <- rgamma(samples, prior[1], 1/2)
h[,2] <- rgamma(samples, prior[2], 1/2)
h[,3] <- rgamma(samples, prior[3], 1/2)
h <- h / rowSums(h)
library(RColorBrewer)
k <- 11
my.cols <- rev(brewer.pal(k, "RdYlBu"))
library(ggplot2)
smoothScatter(h[,2:3], nrpoints=0, colramp=colorRampPalette(my.cols), xlab="h.2", ylab="h.3", xlim=c(0,1), ylim=c(0,1))
